{% extends 'base.html.twig' %}

{% block title %}Index author{% endblock %}

{% block body %}

<style>
    h1 {
        padding: 2rem;
        text-align: center;
    }

    .table {
        padding-left: 16rem;
        padding-right: 16rem;
    }
</style>

<h1 class="container">Les auteurs</h1>

<table class="table table-hover container">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Ã‚ge</th>
            <th scope="col">Action</th>
        </tr>
