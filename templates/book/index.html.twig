{% extends 'base.html.twig' %}

{% block title %}Ajout d'un livre{% endblock %}

{% block body %}

<style>
    h1 {
        padding: 2rem;
        text-align: center;
    }

    .table {
        padding-left: 16rem;
        padding-right: 16rem;
    }
</style>

<h1 class="container">Les livres ajout√©s</h1>

<table class="table table-hover container">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Auteur</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
        <tr class="table-active">
            <th scope="row">{{ book.name }}</th>
            <th scope="row">{{ book.author }}</th>
            <th scope="row">{{ book.releaseAt|date("m/d/Y") }}</th>
            <td class="table-action">
                <a href="{{ path('modify_book', {'id': book.id}) }}">Modifier</a>
                <a href="{{ path('delete_book', {'id': book.id}) }}">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        <tr class="table-active">
            <th></th>
            <th></th>
            <th></th>
            <th scope="row add-book">
                <a href="{{ path('add_book') }}">Ajouter un nouveau livre</a>
            </th>
        </tr>
    </tbody>
</table>

{% endblock %}